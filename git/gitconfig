[user]
	name = Andrei Marshalov
	email = andrei.marshalov@emlid.com
[alias]
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unstage = reset HEAD
	st = status -sb
	undo = checkout --
	subupdate = submodule update --init --recursive
	cpick = cherry-pick
	branchdate =  ! ~/.git/helpers/git-branchdate-helper
	co = checkout
	cm = commit
	cmd = commit -m 'geodata-core: draft'
	cmf = commit --fixup 
	br = branch
	ff = "!f() {\
		set -x;\
		FILE=\"./${GIT_PREFIX}/$1\";\
		shift;\
		echo $FILE;\
		git add ${FILE} \"$@\";\
		git cm --fixup=$(git --no-pager log -1 --pretty=format:%h -- ${FILE});\
	}; f"	
	clean-utracked = clean -fd 	
[merge]
	tool = vimdiff
	ff = only
	conflictstyle = diff3
[core]
	excludesfile = ~/.gitignore
[color]
	ui = auto
[gpg]
	program = gpg2
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
